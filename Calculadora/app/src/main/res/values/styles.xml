<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="operators" parent="main_container">
        <item name="android:background">@drawable/click_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="numbers" parent="main_container">
        <item name="android:background">@drawable/click_white</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="equal" parent="main_container">
        <item name="android:background">@drawable/click_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>