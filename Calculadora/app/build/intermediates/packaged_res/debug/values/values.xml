<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="dark_gray">#575656</color>
    <color name="dark_purple">#7b488e</color>
    <color name="light_gray">#f6f6f6</color>
    <color name="medium_gray">#959292</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Calculadora</string>
    <style name="Theme.Calculadora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="equal" parent="main_container">
        <item name="android:background">@drawable/click_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="main_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="numbers" parent="main_container">
        <item name="android:background">@drawable/click_white</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="operators" parent="main_container">
        <item name="android:background">@drawable/click_purple</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>