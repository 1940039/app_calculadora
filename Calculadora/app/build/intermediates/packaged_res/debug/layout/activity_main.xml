<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewExpression"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="bottom|end"
        android:text=""
        android:textColor="@color/dark_gray"
        android:textSize="40sp"
        app:singleLine="true" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="top|end"
        android:text=""
        android:textColor="@color/dark_gray"
        android:textSize="55sp"
        app:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clean"
            style="@style/operators"
            android:text="AC" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete"
            style="@style/operators"
            android:text="DEL" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/percent"
            style="@style/operators"
            android:text="%" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/div"
            style="@style/operators"
            android:text="÷" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_seven"
            style="@style/numbers"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_eight"
            style="@style/numbers"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_nine"
            style="@style/numbers"
            android:text="9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mult"
            style="@style/operators"
            android:text="×" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_four"
            style="@style/numbers"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_five"
            style="@style/numbers"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_six"
            style="@style/numbers"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/less"
            style="@style/operators"
            android:text="–" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_one"
            style="@style/numbers"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_two"
            style="@style/numbers"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_three"
            style="@style/numbers"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus"
            style="@style/equal"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nbr_zero"
            style="@style/numbers"
            android:layout_weight="2"
            android:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/point"
            style="@style/numbers"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/equal"
            style="@style/operators"
            android:text="=" />

    </LinearLayout>

</LinearLayout>